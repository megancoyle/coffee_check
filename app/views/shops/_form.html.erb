<%= form_for @shop do |f| %>

  <% if @shop.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@shop.errors.count, "error") %> prohibited
        this shop from being saved:
      </h2>
      <ul>
        <% @shop.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :img_url, 'Image URL' %><br>
    <%= f.text_field :img_url %>
  </p>

  <p>
    <%= f.label :shop_type %><br>
    <%= f.select :shop_type, ['Chain', 'Hipster', 'Local'], include_blank: "Select A Type" %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
